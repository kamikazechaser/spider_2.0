<!doctype html>
<html>

<%- include('header'); -%>

    <body>
        <div class="container">
            <div class="col-sm-6 col-sm-offset-3 well">
                <h2><%= data[0].title %></h2>
                <br>
                <form action="/api/updatenote" id="updatenote" method="post">
                    <div class="form-group">
                        <input type="hidden" class="form-control" name="id" value=<%=data[0].id %> >
                    </div>
                    <div class="form-group">
                        <label>Content</label>
                        <textarea class="form-control" rows="5" name="content"><%= data[0].content %></textarea>
                    </div>

                    <button type="submit" class="btn btn-warning">Update</button>
                </form>
            </div>
        </div>

    </body>

</html>